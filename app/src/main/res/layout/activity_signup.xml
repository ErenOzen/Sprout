<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignupActivity">

        <TextView
            android:id="@+id/signup_activity_textview_sprout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="616dp"
            android:hint="@string/LoginScreenSproutName"
            android:textAllCaps="false"
            android:textColor="#023047"
            android:textColorHint="#ffba08"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signup_activity_textview_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="32dp"
            android:text="@string/sign_up_text"
            android:textColor="@color/text"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/signup_activity_textView_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/signup_activity_hint_email"
            android:layout_width="267dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/signup_activity_textView_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/signup_activity_textView_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/email_text"
            android:textColor="@color/text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/signup_activity_hint_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/signup_activity_textView_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/password_text"
            android:textColor="@color/text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/signup_activity_hint_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.106"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/signup_activity_hint_password"
            android:layout_width="264dp"
            android:layout_height="49dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:textColorHint="@color/text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/signup_activity_checkBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.244"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.918" />

        <Button
            android:id="@+id/signup_activity_signupBtn"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_marginBottom="16dp"
            android:text="Sign Up!"
            android:textColorHighlight="@color/text"
            app:backgroundTint="@color/text"
            app:layout_constraintBottom_toTopOf="@+id/signup_activity_imageview_sprout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/signup_activity_checkBox"
            android:layout_width="330dp"
            android:layout_height="37dp"
            android:layout_marginBottom="32dp"
            android:text="@string/sing_up_checkbox"
            android:textColor="@color/text"
            android:textColorHint="@color/text"
            app:layout_constraintBottom_toTopOf="@+id/signup_activity_signupBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/signup_activity_imageview_sprout"
            android:layout_width="143dp"
            android:layout_height="121dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/noun_sprout_109966"
            app:layout_constraintBottom_toTopOf="@+id/signup_activity_textview_sprout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>